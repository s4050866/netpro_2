    private void getPageActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        try{
            areaa.setPage(urla.getText());
                        
            printarea.setText(printarea.getText() + "Thread A : Start!!\n");       
            URL obja = new URL(urla.getText());
            URLConnection con1 = obja.openConnection();
            java.util.Map<String, java.util.List<String>> mapa = con1.getHeaderFields();
            for (java.util.Map.Entry<String, java.util.List<String>> entry : mapa.entrySet()) {
                printarea.setText(printarea.getText() + "   Thread A : " + entry.getKey() + " ,Value : " + entry.getValue()+"\n");
            }
            printarea.setText(printarea.getText() + "Thread A : Finish\n\n");
            
            areab.setPage(urlb.getText()); 
            
            printarea.setText(printarea.getText() + "Thread B : Start!!\n");
            URL objb = new URL(urlb.getText());
            URLConnection con2 = objb.openConnection();
            java.util.Map<String, java.util.List<String>> mapb = con2.getHeaderFields();
            for (java.util.Map.Entry<String, java.util.List<String>> entry : mapb.entrySet()) {
                printarea.setText(printarea.getText() + "   Thread B : " + entry.getKey() + " ,Value : " + entry.getValue()+"\n");
            } 
           printarea.setText(printarea.getText() + "Thread B : Finish\n\n");
            
        }
        catch(Exception e){
            printarea.setText("Error "+e);
        }
    }                                       

